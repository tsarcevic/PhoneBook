<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/toolbar_edit_contact"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorBlue">

        <ImageView
            android:id="@+id/contact_info_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:padding="16dp"
            android:src="@drawable/ic_back_arrow" />

        <ImageView
            android:id="@+id/contact_info_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:padding="16dp"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/contact_info_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="62dp"
            android:padding="16dp"
            android:src="@drawable/ic_delete" />

    </FrameLayout>

    <ImageView
        android:id="@+id/info_contact_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_edit_contact" />

    <TextView
        android:id="@+id/contact_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_contact_image"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawableEnd="@drawable/ic_name"
        android:gravity="center"
        android:textColor="@color/colorBlue"
        tools:text="Contact name" />

    <TextView
        android:id="@+id/contact_info_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_info_name"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawableEnd="@drawable/ic_phonecall"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlue"
        tools:text="Contact number" />

    <TextView
        android:id="@+id/contact_info_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_info_number"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawableEnd="@drawable/ic_address"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlue"
        tools:text="Contact address" />

</RelativeLayout>
